# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
tab_width = 4

[*.rst]
indent_style = space
trim_trailing_whitespace = false
insert_final_newline = true

[.gitignore]
indent_size = 0
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[*.json]
indent_size = 4
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
